<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
    "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
    <title>{% block title %}{{ app.request.host }}{% endblock %}</title>
</head>
<style>
    * {margin:0px; padding:0px;}
    html, body {width:100%; height:100%;}
    table.layout {width:99%; height: 100%; margin: auto;}
    table td {vertical-align: text-top;}
    tr.header {height:100px; background: white;}
    tr.footer {height:60px; background: white;}
    td.aside {width:330px; background: white;}
</style>
<body>
    <table class="layout" cellpadding="0" cellspacing="0">
        <tr class="header">
            <td colspan="2">{% block header %}HEADER_BLOCK{% endblock %}</td>
        </tr>
        <tr class="middle">
            <td>
                {%block middle%}
	                {% block content %}CONTENT_BLOCK{% endblock %}
                {% endblock %}
        </td>
        </tr>
        <tr class="footer">
            <td colspan="2">{%block footer%}FOOTER{%endblock%}</td>
        </tr>
    </table>
</body>
</html>
