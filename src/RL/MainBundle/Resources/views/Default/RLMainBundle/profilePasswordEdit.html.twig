<form action="{{path('save_edited_password', {'name':userInfo.username})}}" method="post" {{form_enctype(passwordChanging)}}>
	<fieldset>
		<legend>{%trans%}Change password{%endtrans%}</legend>
		<table>
			<tr>
				<td>{{form_label(passwordChanging.oldPassword, 'Old password')}}:</td>
				<td>{{form_widget(passwordChanging.oldPassword)}}</td>
				<td>{{form_errors(passwordChanging.oldPassword)}}</td>
			</tr>
			<tr>
				<td>{{form_label(passwordChanging.newPassword.first, 'New password')}}:</td>
				<td>{{form_widget(passwordChanging.newPassword.first)}}</td>
				<td>{{form_errors(passwordChanging.newPassword.first)}}</td>
			</tr>
			<tr>
				<td>{{form_label(passwordChanging.newPassword.second, 'Validation')}}:</td>
				<td>{{form_widget(passwordChanging.newPassword.second)}}</td>
				<td>{{form_errors(passwordChanging.newPassword.second)}}</td>
			</tr>
		</table>
		{{form_rest(passwordChanging)}}
	</fieldset>
	<input type="submit" name="sbm" value="{%trans%}Save settings{%endtrans%}">
</form>
