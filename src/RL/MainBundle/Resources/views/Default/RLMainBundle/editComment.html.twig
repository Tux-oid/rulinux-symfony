{% extends theme.path('layout.html.twig')%}

{%block title%}
{{parent()}} - {%trans%}Edit message{%endtrans%}
{%endblock title%}

{%block content%}
<h1>{%trans%}Edit message{%endtrans%}</h1><br>
<form action="" method="post" {{form_enctype(form)}}>
{{form_errors(form)}}
<table border="0">
<tr>
<td style="vertical-align:top;">{{form_label(form.subject)}}:</td>
<td>
{{form_widget(form.subject, {'attr':{'style':'width:100%'}})}}
<p class="error">{{form_errors(form.subject)}}</p>
</td>
</tr>
<tr>
<td style="vertical-align:top;">{{form_label(form.comment)}}:</td>
<td>
{{form_widget(form.comment, {'attr': {'rows':'20', 'cols':'80'}})}}
<p class="error">{{form_errors(form.comment)}}</p>
</td>
</tr>
<tr>
<td style="vertical-align:top;">{{form_label(form.editionReason, 'Edition reason')}}:</td>
<td>
{{form_widget(form.editionReason, {'attr':{'style':'width:100%'}})}}
<p class="error">{{form_errors(form.editionReason)}}</p>
</td>
</tr>
<tr>
<td></td>
<td>
<input type="submit" name="submit" value="{%trans%}Change{%endtrans%}">
</td>
</tr>
</table>
{{form_rest(form)}}
</form>
{%endblock content%}
