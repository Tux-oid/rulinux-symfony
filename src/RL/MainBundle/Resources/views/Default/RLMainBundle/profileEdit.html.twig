{%extends theme.path('RLMainBundle::layout.html.twig')%}

{%block title%}
{{parent()}} - {%trans%}Edif profile of user{%endtrans%} {{userInfo.username}}
{%endblock title%}

{%block content%}
	<h1>{%trans%}User profile{%endtrans%}</h1>
	{%if userInfo.anonymous == false%}
		{%include theme.path('RLMainBundle:Profile:profilePasswordEdit.html.twig')%}
		{%include theme.path('RLMainBundle:Profile:profilePersonalDataEdit.html.twig')%}
	{%endif%}
	{%include theme.path('RLMainBundle:Profile:profileSettingsEdit.html.twig')%}
	{%include theme.path('RLMainBundle:Profile:profileFiltersSettingsEdit.html.twig')%}
	{%if is_granted('ROLE_MODER')%}
		{%include theme.path('RLMainBundle:Profile:profileModeratorSettingsEdit.html.twig')%}
	{%endif%}
	{%if is_granted('ROLE_ADMIN')%}
		{%include theme.path('RLMainBundle:Profile:profileAdministratorSettingsEdit.html.twig')%}
	{%endif%}
    {%include theme.path('RLMainBundle:Profile:profileMainPageSettingsEdit.html.twig')%}

{%endblock content%}
