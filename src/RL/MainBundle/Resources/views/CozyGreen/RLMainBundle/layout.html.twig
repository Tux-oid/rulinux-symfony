<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
        "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    {% stylesheets   '@RLMainBundle/Resources/public/css/CozyGreen/main.css'
    '@RLMainBundle/Resources/public/css/CozyGreen/common.css'
    '@RLMainBundle/Resources/public/css/CozyGreen/hover.css' %}
    <link href="{{ asset_url }}" rel="stylesheet" media="screen"/>
    {% endstylesheets %}
    {% javascripts   '@RLMainBundle/Resources/public/js/jquery.js'
    '@RLMainBundle/Resources/public/js/common.js' %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
    {% endjavascripts %}
    <title>
        {% block title %}
            {{ app.request.host }}
        {% endblock title %}
    </title>
</head>
<body>
<table class="layout" cellpadding="0" cellspacing="0">
    <tr class="header">
        <td colspan="2">
            {% block header %}
                <table border="0" cellspacing="0" cellpadding="0" width="100%" class="head">
                    <tr class="headClsTop">
                        <td><a href="{{ path('index') }}"> <img
                                src="{{ asset('/bundles/rlmain/images/CozyGreen/lor-new.png') }}"
                                border=0 alt="Main Page"></a></td>
                        <td align=right valign=top>
                            {% if app.user.anonymous == false %}
                                <a href="{{ path('logout') }}">{% trans %}Logout{% endtrans %}</a>
                            {% else %}
                                <a href="{{ path('register') }}">{% trans %}Registration{% endtrans %}</a>
                                <a href="{{ path('login') }}">{% trans %}Login{% endtrans %}</a>
                            {% endif %}
                        </td>
                    </tr>
                    <tr class="headClsBottom">
                        <td align=left>
                            <a href="{{ path('section', {'sectionRewrite':'news'}) }}">{% trans %}News{% endtrans %}</a>
                            -
                            <a href="{{ path('section', {'sectionRewrite':'forum'}) }}">{% trans %}
                                Forum{% endtrans %}</a>
                            -
                            <a href="{{ path('section', {'sectionRewrite':'articles'}) }}">{% trans %}
                                Articles{% endtrans %}</a>
                            -
                            <a href="{{ path('section', {'sectionRewrite':'gallery'}) }}">{% trans %}
                                Gallery{% endtrans %}</a>
                            -
                            <a href="{{ path('unconfirmed') }}">{% trans %}Unconfirmed{% endtrans %}</a>
                            -
                            <a href="{{ path('tracker') }}">{% trans %}Tracker{% endtrans %}</a>
                            -
                            <a href="{{ path('rules') }}">{% trans %}Rules{% endtrans %}</a>
                            -
                            <a href="{{ path('links') }}">{% trans %}Links{% endtrans %}</a>
                            -
                            <a href="{{ path('users') }}">{% trans %}Users{% endtrans %}</a>
                            -
                            <a href="{{ path('mark') }}">{% trans %}Mark{% endtrans %}</a>
                            -
                            <a href="{{ path('search') }}">{% trans %}Search{% endtrans %}</a>
                        </td>
                        <td align=right>{% trans %}Welcome,{% endtrans %} <a
                                href="{{ path('user', {'name':app.user.username}) }}">{{ app.user.username }}</a>!
                        </td>
                    </tr>
                </table>
            {% endblock header %}
        </td>
    </tr>
    <tr class="middle">
        <td>
            {% block middle %}
                {% block navigation %}
                {% endblock navigation %}
                {% block content %}
                {% endblock content %}
            {% endblock middle %}
        </td>
    </tr>
    <tr class="footer">
        <td colspan="2">
            {% block footer %}
                <br>
                <hr>
                <hr>
                (c) 2010-2020 LOR-NG Developers Group<br>
                Powered by TimeMachine
            {% endblock footer %}
        </td>
    </tr>
</table>
</body>
</html>
