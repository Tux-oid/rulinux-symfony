<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
	"http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
	{% stylesheets   '@RLThemesBundle/Resources/public/css/Default/main.css'
                         '@RLThemesBundle/Resources/public/css/Default/common.css'
                         '@RLThemesBundle/Resources/public/css/Default/hover.css'
        %}
	<link href="{{ asset_url }}" rel="stylesheet" media="screen"/>
	{% endstylesheets %}
	{%block javascripts%}
	<script src="{{asset('/web/bundles/rlthemes/js/jquery.js')}}" type="text/javascript"></script>
	<script src="{{asset('/web/bundles/rlthemes/js/common.js')}}" type="text/javascript"></script>
	{%endblock javascripts%}
	<title>
		{% block title %}
		TITLE_BLOCK
		{% endblock %}
	</title>
</head>
<body>
<table class="layout" cellpadding="0" cellspacing="0">
	<tr class="header">
		<td colspan="2">
			{% block header %}
			<table border="0" cellspacing="0" cellpadding="0" width="100%" class="head">
				<tr>
					<td><a href="{{path('user', {'name':user.username})}}">{{user.username}}</a>@<a href="/">RULINUX.NET~#</a></td>
					<td align=right valign=top>{%trans%}Last login{%endtrans%}: {{user.lastVisitDate.date}}</td>
				</tr>
				<tr>
					<td align=left>
						{%if user.anonymous == false%}
							<a href="{{path('logout')}}">{%trans%}Logout{%endtrans%}</a>
						{%else%}
							<a href="{{path('register')}}">{%trans%}Registration{%endtrans%}</a>
							<a href="{{path('login')}}">{%trans%}Login{%endtrans%}</a>
						{%endif%}
					</td>
					<td align=right>
						<a href="{{path('section', {'sectionRewrite':'news'})}}">{%trans%}News{%endtrans%}</a>
						|
						<a href="{{path('section', {'sectionRewrite':'forum'})}}">{%trans%}Forum{%endtrans%}</a>
						|
						<a href="{{path('section', {'sectionRewrite':'articles'})}}">{%trans%}Articles{%endtrans%}</a>
						|
						<a href="{{path('section', {'sectionRewrite':'gallery'})}}">{%trans%}Gallery{%endtrans%}</a>
						|
						<a href="{{path('unconfirmed')}}">{%trans%}Unconfirmed{%endtrans%}</a>
						|
                        <a href="{{path('tracker')}}">{%trans%}Tracker{%endtrans%}</a>
                        |
						<a href="{{path('rules')}}">{%trans%}Rules{%endtrans%}</a>
						|
						<a href="{{path('links')}}">{%trans%}Links{%endtrans%}</a>
                        |
                        <a href="{{path('users')}}">{%trans%}Users{%endtrans%}</a>
					</td>
				</tr>
			</table>
			{% endblock %}</td>
	</tr>
	<tr class="middle">
		{%block middle%}
		<td class="content">
			{% block content %}CONTENT_BLOCK{% endblock %}
		</td>
		{% endblock %}
	</tr>
	<tr class="footer">
		<td colspan="2">
			{%block footer%}
			<br>
			<hr>
			<hr>
			(c) 2010-2020 LOR-NG Developers Group<br>
			Powered by TimeMachine
			{%endblock%}
		</td>
	</tr>
</table>
</body>
</html>
