{% extends theme.path('RLMainBundle', 'layout.html.twig') %}

{%block title%}
{{parent()}} - {%trans%}Forum{%endtrans%}
{%endblock title%}

{%block content%}
<h1>
        {%trans%}Forum{%endtrans%}
	</h1>
{%trans%}Groups{%endtrans%}:
	<ul>
        {% for subsection in subsections %}
			<li><a href="{{path('subsection', {'name': subsection.rewrite})}}">{{ subsection.name|e }}</a>({%if threadsCount['all'][subsection.id] is defined%}{{threadsCount['all'][subsection.id]}}{%else%}-{%endif%}/{%if threadsCount['day'][subsection.id] is defined%}{{threadsCount['day'][subsection.id]}}{%else%}-{%endif%}/{%if threadsCount['hour'][subsection.id] is defined%}{{threadsCount['hour'][subsection.id]}}{%else%}-{%endif%}) - {{ subsection.description|e }}</li>
        {% endfor %}
		</ul>
		<br>
		<h1>{%trans%}Settings{%endtrans%}</h1>
		<ul>
			<li><a href="{{path("user_edit", {'name':user.username})}}">{%trans%}Personal settings{%endtrans%}</a></li>
		</ul><br>
{%endblock%}
