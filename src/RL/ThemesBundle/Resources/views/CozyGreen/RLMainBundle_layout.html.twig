<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
    "http://www.w3.org/TR/html4/loose.dtd">
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        {% stylesheets   '@RLThemesBundle/Resources/public/css/CozyGreen/main.css' 
                         '@RLThemesBundle/Resources/public/css/CozyGreen/common.css'
                         '@RLThemesBundle/Resources/public/css/CozyGreen/hover.css' filter="cssrewrite"
        %}
        <link href="{{ asset_url }}" rel="stylesheet" media="screen" />
        {% endstylesheets %}
        <title>{% block title %}TITLE_BLOCK{% endblock %}</title>
    </head>
    <body>
        <table class="layout" cellpadding="0" cellspacing="0">
            <tr class="header">
                <td colspan="2">
                    {% block header %}
                    <table border="0" cellspacing="0" cellpadding="0" width="100%">
                        <tr class="headClsTop">
                            <td><a href="{{path('index')}}">   <img src="{{asset('../../images/CozyGreen/lor-new.png')}}" border=0 alt="Main Page"></a></td>
                            <td align=right valign=top><a href="{{path('logout')}}">Выход</a></td>
                        </tr>
                        <tr class="headClsBottom">
                            <td align=left><a href="{{path('forum')}}">Форум</a></td>
                            <td align=right>Добро пожаловать <a href="user_{{user.username}}">{{user.username}}</a></td>
                        </tr>
                    </table>
                    {% endblock %}
                </td>
            </tr>
            <tr class="middle">
                {%block middle%}
                <td class="content">
                    {% block content %}CONTENT_BLOCK{% endblock %}
                </td>
                {% endblock %}
            </tr>
            <tr class="footer">
                <td colspan="2">{%block footer%}FOOTER{%endblock%}</td>
            </tr>
        </table>
    </body>
</html>
